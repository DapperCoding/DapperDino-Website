
@using DapperDino.DAL.Models

@model Proficiency

@{
    ViewData["Title"] = "Edit Proficiency";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section id="features" class="features">
    <div class="container">

        <div class="row">
            <form asp-controller="Proficiency" asp-action="Edit/@(Model.Id > 0? Model.Id.ToString() : "")" method="post" >

                <div class="form-group">
                    <label asp-for="Name"></label>

                    <input class="form-control" asp-for="Name" />
                </div>

                <div class="form-group">
                    <label asp-for="ProficiencyType"></label>

                    <select class="form-control" asp-for="ProficiencyType" asp-items="new SelectList(Enum.GetValues(typeof(ProficiencyType)))"></select>
                </div>

                <input class="btn btn-primary" type="submit" value="edit" name="submit" />
            </form>
        </div>
    </div>
</section>
