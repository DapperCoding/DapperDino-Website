@using DapperDino.Areas.Admin.Models.Products
@using DapperDino.DAL.Models

@model ProductEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section id="features" class="features">
    <div class="container">
        <div class="row">
            <!-- Overview -->
        </div>

        <div class="row">
            <form asp-area="Admin" asp-controller="Product" asp-action="Post">

                @Html.HiddenFor(x => x.Id)

                <div class="form-group">
                    <label asp-for="Name"></label>

                    <input class="form-control" asp-for="Name" />
                </div>

                <div class="form-group">
                    <label asp-for="IsActive"></label>

                    <input asp-for="IsActive" />
                </div>

                <div class="form-group">
                    <label asp-for="ShortDescription"></label>

                    <textarea class="form-control" asp-for="ShortDescription"></textarea>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>

                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>


                <div class="form-group">
                    <label asp-for="Price"></label>

                    <input class="form-control" asp-for="Price" />
                </div>

                <div class="form-group">
                    <label asp-for="Categories"></label>

                    <select class="form-control" asp-for="SelectedProductCategories" asp-items="Model.AllCategories.Select(x=>new SelectListItem() { Text = x.ProductCategory.Name, Value = x.ProductCategoryId.ToString()})" multiple="multiple"></select>
                </div>



                <input class="btn btn-primary" type="submit" value="edit" name="submit" />
            </form>
        </div>
    </div>
</section>
