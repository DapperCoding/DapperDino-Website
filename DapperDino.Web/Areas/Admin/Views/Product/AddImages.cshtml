@using DapperDino.Areas.Admin.Models.Products
@using DapperDino.DAL.Models

@model AddImagesViewModel

@{
    ViewData["Title"] = "Add images to the product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section id="features" class="features">
    <div class="container">
        <div class="row">
            <!-- Overview -->
        </div>

        <div class="row">
            <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="PostFiles" asp-route-productId="@Model.ProductId">
                <div class="form-group">
                    <div class="col-md-10">
                        <p>Upload one or more files using this form:</p>
                        <input type="file" name="files" multiple />
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Upload" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
