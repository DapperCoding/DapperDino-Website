@using DapperDino.Areas.Admin.Models

@model ApplicantIndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section id="features" class="features">
    <div class="container">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Discord</th>
                        <th>Explanation</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                @foreach (var applicant in Model.Applicants)
                {
                <tr>
                    <td>
                        @applicant.FirstName
                    </td>
                    <td>
                        @applicant.LastName
                    </td>
                    <td>
                        @applicant.DiscordUser.Username
                    </td>
                    <td>
                        @applicant.Explanation
                    </td>
                    <td>
                        <a href="~/Admin/Applicant/Edit/@applicant.Id">Edit</a>&nbsp;&nbsp;
                        <a href="~/Admin/Applicant/AcceptApplicant/@applicant.Id">Accept</a>&nbsp;&nbsp;
                        <a href="~/Admin/Applicant/DenyApplicant/@applicant.Id">Deny</a>&nbsp;&nbsp;
                        <a href="@Url.Action("Delete", "Applicant", new { id = applicant.Id})">Delete</a>
                    </td>
                </tr>
                }

            </table>
        </div>
    </div>
</section>

@section Scripts
    {

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pagingType": "full_numbers"
            });
        });
    </script>
}
