
@using DapperDino.Models.SuggestionViewModels
@using DapperDino.DAL.Models;

@model SuggestionViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="features" class="features faq-cards">
    <div class="container">
        <div class="row">
            <!-- Overview -->
            <h1>I want to suggest something to you!</h1>
            <p>If you submit this form to us, we'll contact you as soon as possible!</p>

        </div>

        <div class="row">
            <form asp-controller="Suggestion" asp-action="Contact" method="post" bc-validation="true">


                <form-group>
                    <label for="Description">Your Suggestion</label>

                    <input class="form-control" asp-for="Description" />
                </form-group>

                <form-group>
                    <label asp-for="DiscordId"></label>

                    <input class="form-control" asp-for="DiscordId" />
                </form-group>

                <form-group>
                    <label asp-for="Type"></label>

                    @Html.DropDownList("Type",
                        Html.GetEnumSelectList<SuggestionTypes>(),
                        "Select Suggestion Type",new { @class = "form-control" })
                </form-group>

                <input class="btn btn-primary" type="submit" value="Contact me" name="submit" />
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        jQuery(window).load(function () {

            $("#preloader").fadeOut("slow");

        });
    </script>
}