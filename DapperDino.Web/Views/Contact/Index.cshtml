
@using DapperDino.Models
@using DapperDino.DAL.Models

@model ContactViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="features" class="features faq-cards">
    <div class="container">
        <div class="row">
            <!-- Overview -->
            <h1>I want to contact you!</h1>
            <p>If you submit this form to us, we'll contact you as soon as possible!</p>

        </div>

        <div class="row">
            <form asp-controller="Contact" asp-action="Post" method="post">

                <div class="form-group">
                    <label asp-for="DiscordId"></label>

                    <input class="form-control" asp-for="DiscordId" />
                </div>

                <div class="form-group">
                    <label asp-for="DiscordUsername"></label>

                    <input class="form-control" asp-for="DiscordUsername" />
                </div>

                <div class="form-group">
                    <label asp-for="Name"></label>

                    <input class="form-control" asp-for="Name" />
                </div>

                <div class="form-group">
                    <label asp-for="Question"></label>

                    <input class="form-control" asp-for="Question" />
                </div>

                <input class="btn btn-primary" type="submit" value="Contact me" name="submit" />
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        jQuery(window).load(function () {

            $("#preloader").fadeOut("slow");

        });
    </script>
}