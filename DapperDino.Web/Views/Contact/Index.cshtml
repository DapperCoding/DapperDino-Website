
@using DapperDino.Models
@using DapperDino.DAL.Models

@model ContactViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="features" class="features  faq-cards">
    <div class="container">
        <div class="row text-center">

            <div class="sec-title text-center wow bounceInDown animated" data-wow-duration="500ms" style="margin-bottom:30px;">
                <h2>I want to contact you!</h2>
                <div class="devider"><i class="fa fa-heart-o fa-lg"></i></div>
                <p>If you submit this form to us, we'll contact you as soon as possible!</p>
            </div>
        </div>

        <div class="row">
            <form asp-controller="Contact" asp-action="Post" method="post" bc-validation="true">

                <div class="form-group">
                    <label asp-for="DiscordId"></label>
                    <input class="form-control" asp-for="DiscordId" />
                    <span asp-validation-for="DiscordId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DiscordUsername"></label>
                    <input class="form-control" asp-for="DiscordUsername" />
                    <span asp-validation-for="DiscordUsername" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Question"></label>

                    <input class="form-control" asp-for="Question" />
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>

                <input class="btn btn-primary" type="submit" value="Contact me" name="submit" />
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}